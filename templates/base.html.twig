<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Toâ€‘Do App{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  </head>
  <body class="container mt-4">
    <nav class="mb-3 d-flex justify-content-between">
      <div>
        <a href="{{ path('todo_index') }}" class="me-2">Home</a>
        <a href="{{ path('todo_list') }}" class="me-2">Tasks</a>
        <a href="{{ path('todo_new') }}" class="me-2">New Task</a>
      </div>
      <div>
        {% if app.user %}
          <span class="me-2">Logged in as {{ app.user.email }}</span>
          <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary btn-sm">Logout</a>
        {% else %}
          <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm me-2">Login</a>
          <a href="{{ path('app_register') }}" class="btn btn-primary btn-sm">Register</a>
        {% endif %}
      </div>
    </nav>

    {% block body %}{% endblock %}
  </body>
</html>
