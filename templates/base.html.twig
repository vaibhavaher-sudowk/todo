<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}To‑Do App{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('todo_index') }}">
          <i class="bi bi-check2-square"></i> To‑Do App
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a href="{{ path('todo_index') }}" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="{{ path('todo_list') }}" class="nav-link">Tasks</a></li>
            <li class="nav-item"><a href="{{ path('todo_new') }}" class="nav-link">New Task</a></li>
          </ul>

          {# ✅ JWT navbar: we control visibility using JS #}
          <ul class="navbar-nav ms-auto">
            {# Logged OUT UI #}
            <li class="nav-item" id="navLoggedOutLogin">
              <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm me-2">Login</a>
            </li>
            <li class="nav-item" id="navLoggedOutRegister">
              <a href="{{ path('app_register') }}" class="btn btn-success btn-sm">Register</a>
            </li>

            {# Logged IN UI #}
            <li class="nav-item dropdown d-none" id="navLoggedIn">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle"></i> <span id="navUserEmail">User</span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="{{ path('todo_list') }}">My Tasks</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><button class="dropdown-item text-danger" id="btnLogout">Logout</button></li>
              </ul>
            </li>
          </ul>

        </div>
      </div>
    </nav>

    <main class="container mt-4">
      {% block body %}{% endblock %}
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      function setNavbarLoggedIn(emailText) {
        document.getElementById('navLoggedOutLogin').classList.add('d-none');
        document.getElementById('navLoggedOutRegister').classList.add('d-none');

        const loggedIn = document.getElementById('navLoggedIn');
        loggedIn.classList.remove('d-none');

        if (emailText) {
          document.getElementById('navUserEmail').textContent = emailText;
        }
      }

      function setNavbarLoggedOut() {
        document.getElementById('navLoggedOutLogin').classList.remove('d-none');
        document.getElementById('navLoggedOutRegister').classList.remove('d-none');
        document.getElementById('navLoggedIn').classList.add('d-none');
      }

      async function tryLoadUser() {
        const token = localStorage.getItem('jwt_token');
        if (!token) {
          setNavbarLoggedOut();
          return;
        }

        // show logged-in state immediately
        setNavbarLoggedIn('Loading...');

        // OPTIONAL: get real email from /api/me
        try {
          const res = await fetch('/api/me', {
            headers: { 'Authorization': 'Bearer ' + token }
          });

          if (!res.ok) {
            // token invalid/expired
            localStorage.removeItem('jwt_token');
            setNavbarLoggedOut();
            return;
          }

          const data = await res.json();
          setNavbarLoggedIn(data.user || 'User');
        } catch (e) {
          // If API not available, just show generic state
          setNavbarLoggedIn('User');
        }
      }

      document.addEventListener('DOMContentLoaded', () => {
        tryLoadUser();

        const btn = document.getElementById('btnLogout');
        if (btn) {
          btn.addEventListener('click', () => {
            localStorage.removeItem('jwt_token');
            window.location.href = "{{ path('app_login') }}";
          });
        }
      });
    </script>
  </body>
</html>