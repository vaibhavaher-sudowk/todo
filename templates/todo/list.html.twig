{% extends 'base.html.twig' %}

{% block body %}
    <h1>Task List</h1>

    {# Show flash messages (success after create/update/delete) #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Due Date</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.title }}</td>
                <td>{{ todo.status }}</td>
                <td>{{ todo.priority }}</td>
                <td>{{ todo.dueDate ? todo.dueDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ todo.createdDate|date('Y-m-d H:i') }}</td>
                <td>
                    <a href="{{ path('todo_edit', {id: todo.id}) }}" class="btn btn-sm btn-warning">Update</a>

                    <form method="post"
                          action="{{ path('todo_delete', {id: todo.id}) }}"
                          style="display:inline"
                          onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No tasks found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Pagination controls #}
    <div class="navigation">
        {{ knp_pagination_render(todos) }}
    </div>

    <p><a href="{{ path('todo_new') }}" class="btn btn-success">Create New Task</a></p>
{% endblock %}
